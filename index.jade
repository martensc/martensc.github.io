    article(role='main')
      div.inner
        header(role='header')
          h1#name <span class="cap">C</span><span class="lower">arl</span> <span class="cap">M</span><span class="lower">artens</span>

          h2.sub Designer + Developer

        section(role='content')
          p Hello, my name is Carl Martens and I'm a senior designer based out of the Twin Cities working for Palantir.net. I've been working in this industry for over 8 years and am passionate about my craft. Creating beautiful interfaces that fit seamlessly into applications is what drives me each day. Feel free to write me for work inquiries or just to say hello.

        footer(role='footer')
          nav(role='resources')
            ul
              li: a(href='javascript:void(0);' class='md-trigger' data-modal='modal-12')
                img(src='images/ico_email.svg' title='Email' alt='Email')

              li: a(href='https://dribbble.com/martensc/' target='blank')
                img(src='images/ico_dribbble.svg' title='Dribbble' alt='Dribbble')

              li: a(href='http://github.com/martensc/' target='blank')
                img(src='images/ico_github.svg' title='Github' alt='Github')

              li: a(href='https://www.linkedin.com/in/carlrmartens/' target='blank')
                img(src='images/ico_linkedin.svg' title='LinkedIn' alt='LinkedIn')

    div.md-modal.md-effect#modal-12(role='contact')
      div.contact-content
        a.md-close(href='javascript:void(0);')
          img(src='images/ico_close.svg' title='Close' alt='Close')
        p.contact-title Hello there.
        form(action='https://formspree.io/carlrmartens@gmail.com' method='POST')
          input(type='text' name='name' placeholder='Full Name')
          input(type='text' name='_replyto' placeholder='Email')
          textarea(name='message' placeholder='Message')
          input(type='text' name='_gotcha' style='display:none')
          input(type='submit' value='Send' class='button')
          input(type='hidden' name='_next' value='http://carl-martens.com/thankyou.html')

    div.md-overlay
    div.loader

